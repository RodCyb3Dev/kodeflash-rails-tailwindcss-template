<% content_for :devise_form do %>
  <h2 class="heading text-4xl font-bold pt-4 mb-8"><%= t('.change_your_password', :default => 'Change your password') %></h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-6">
      <div class="flex">
      <%= f.label :password, t('.new_password', :default => 'New password'), class:"label" %>
      <% if @minimum_password_length %>
        <em>(<%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>)</em>
      <% end %>
      </div>
      <%= f.password_field :password,  autofocus: true, autocomplete: "new-password", class: "input" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, t('.confirm_new_password', :default => 'Confirm new password'), class: "label" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "input" %>
    </div>

    <div class="mb-6">
      <%= f.submit t('.change_my_password', :default => 'Change my password'), class: "btn btn-default shadow-sm hover:shadow-lg" %>
    </div>
  <% end %>
  <hr class="border mt-6" />
  <div class="text-center mt-4">
    <p class="text-sm text-grey-dark font-serif">Already have an account?</p>
    <%= render "devise/shared/links" %>
  </div>
<% end %>

<%= render "devise/share/form_wrap" %>
