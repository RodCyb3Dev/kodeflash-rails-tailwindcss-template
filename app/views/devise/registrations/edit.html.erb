<% content_for :devise_form do %>
  <h2 class="heading text-4xl font-bold pt-4 mb-8"><%= t('.title', resource: resource.model_name.human) %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-4">
          <%= image_tag user_avatar(resource, 100), class: "rounded-circle" %>
        </div>
        <div class="col-sm-8">
          <%= f.file_field :avatar %>
        </div>
      </div>
    </div>

    <div class="mb-6">
      <%= f.label :username, class:"label" %>
      <%= f.text_field :username, autofocus: true, class: 'input hover:shadow-lg block border border-grey-light w-full p-2 rounded mb-4', placeholder: t('.user_name', :default => 'Koko nimi') %>
    </div>

    <div class="mb-6">
      <%= f.text_field :name, autofocus: false, class: 'input hover:shadow-lg block border border-grey-light w-full p-2 rounded mb-4', placeholder: t('.full_name', :default => 'Koko nimi') %>
    </div>

    <div class="mb-6">
      <%= f.label :email, class:"label" %>
      <%= f.email_field :email, autocomplete: "email", class:"input hover:shadow-lg block border border-grey-light w-full p-2 rounded mb-4", placeholder: t('.email', :default => 'Sähköposti') %>
    </div>

    <div class="mb-6">
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
      <% end %>
    </div>

    <div class="mb-6">
      <%= f.label :password, class:"label" %>
      <%= f.password_field :password, autocomplete: "new-password", class:"input hover:shadow-lg block border border-grey-light w-full p-2 rounded mb-4", placeholder: t('.password', :default => 'Uusi salasana') %>
      <p class="text-sm text-grey-dark pt-1 italic"> 
        <% if @minimum_password_length %>
          <%= @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', :default => 'characters minimum' ) %></em> 
        <% end %> 
        (<%= t('.leave_blank_if_you_don_t_want_to_change_it', :default => "leave blank if you don't want to change it") %>) 
      </p>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", placeholder: t('.confirm_password', :default => 'Vahvista salasana') %>
    </div>

    <div class="mb-6">
      <%= f.label :current_password, class: "label" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
      <p class="text-sm text-grey-dark pt-2 italic">(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</p>
    </div>

    <div class="mb-6">
      <%= f.submit t('.update', :default => "Update"), class: "buttons w-full text-center rounded-full py-1 bg-green-400 text-white hover:bg-green-600 hover:shadow-lg focus:outline-none my-1" %>
    </div>
    <% end %>

    <hr class="border mt-6 mb-3" />

    <h3 class="heading text-xl font-bold mb-4"><%= t('.cancel_my_account', :default => 'Poista käyttäjätunnukseni') %></h3>

    <div class="flex justify-between items-center">
      <div class="flex-1"><p class="py-4"><%= t('.unhappy', :default => 'Onneton?') %>?</p></div>

      <%= button_to t('.cancel_my_account', :default => "Poista käyttäjätunnukseni"), registration_path(resource_name), data: { confirm: t('.are_you_sure', :default => "Oletko varma?") }, method: :delete, class: "btn btn-default" %>
    </div>
    <hr>
    <div class="text-sm text-grey-dark mt-2">
      <%= link_to t('devise.shared.links.back', :default => "<< Takaisin"), :back %>
    </div>
<% end %>

<%= render 'devise/shared/form_wrap' %>


