<% content_for :devise_form do %>
  <h2 class="heading text-4xl font-bold pt-4 mb-8"><%= t('.sign_up', :default => "Luo tili") %></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-6">
      <%= f.label :username, class:"label" %>
      <%= f.text_field :username, autofocus: true, placeholder: t('.username', :default => 'Käyttäjätunnus'), class:"input" %>
    </div>

    <div class="mb-6">
      <%= f.label :name, class:"label" %>
      <%= f.text_field :name, placeholder: t('.name', :default => 'Koko nimi'), class:"input" %>
    </div>

    <div class="mb-6">
      <%= f.label :email, class:"label" %>
      <%= f.email_field :email, autocomplete: "email", placeholder: t('.email', :default => 'Sähköposti'), class:"input" %>
    </div>

    <div class="mb-6">
      <div class="flex">
        <%= f.label :password, class: "label" %>
        <% if @minimum_password_length %>
        <span class="text-xs pl-1 text-grey-dark"><em>(<%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>)</em></span>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: t('.password', :default => 'Salasana'), class: "input" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class:"label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: t('.confirm_password', :default => 'Vahvista salasana'), class: "input" %>
    </div>

    <div class="mb-6">
      <%= f.submit "Sign up", t('.sign_up', :default => "Rekisteröidy"), class: "btn btn-default" %>
    </div>
    <hr class="border mt-6" />
  <% end %>
  <%= render "devise/shared/links" %>
<% end %>
<%= render "devise/shared/form_wrap" %>
